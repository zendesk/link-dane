<div class="hours">
  <table>
  {{#each days}}
    <tr>
      <td class="label-hour"> {{long}} </td>
      <td> <input type="text" class="day hasPopover" name="{{short}}" value="{{hours}}" data-trigger="hover" data-content="example: 9am-3pm, 6pm-8pm"> </td>
      <td> <label class="checkbox"> <input type="checkbox" class="closed" name="{{short}}"> Closed </label> </td>
    </tr>
  {{/each}}
    <tr><td colspan="3">&nbsp;</td></tr>
    <tr>
      <td id="preview_label" class="label-hour">Preview</td><td colspan="2" id="preview_hours">{{> openHours}}</td>
    </tr>
  </table>
</div>
